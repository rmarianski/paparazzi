#!/bin/bash
PRE=""
DIST="DARWIN"
PORT=8080
if [ -f /etc/os-release ]; then
    . /etc/os-release
    DIST=$NAME
    PORT=80
fi

if [ "$DIST" == "Amazon Linux AMI" ]; then
    PRE="sudo "
    export DISPLAY=:0
fi

#start http server
prime_httpd tcp://*:8002 ipc:///tmp/proxy_in ipc:///tmp/loopback &

#start proxy
prime_proxyd ipc:///tmp/proxy_in ipc:///tmp/proxy_out

#start 3 tangram workers
for i in {0..2}; do
  ./build/bin/paparazzi ipc:///tmp/proxy_out ipc:///tmp/loopback &
done